{
  "name": "bootmark",
  "author": "obedm503",
  "homepage": "https://obedm503.github.io/bootmark/",
  "description": "markdown + bootstrap as a jQuery plugin",
  "version": "0.9.0",
  "license": "MIT",
  "npmName": "bootmark",
  "npmFileMap": [
    {
      "basePath": "dist",
      "files": [
        "*"
      ]
    }
  ],
  "module": "dist/esm/index.js",
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "repository": "https://github.com/obedm503/bootmark.git",
  "scripts": {
    "docs": "jsdoc2md > ./docs/DOCS.md",
    "prePublishOnly": "npm run docs & rm -rf dist && mkdir dist && npm run bundle && printf '\n\n  bootmark: Ready for publish\n'",
    "build": "stencil build",
    "build:watch": "stencil build --watch",
    "start": "stencil build --dev --watch --serve --no-open --port=8080",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watchAll"
  },
  "jsdoc2md": {
    "files": "src/*.js",
    "module-index-format": "grouped",
    "property-list-format": "list",
    "param-list-format": "list",
    "member-index-format": "grouped",
    "name-format": false,
    "example-lang": "md",
    "private": true
  },
  "dependencies": {
    "memoize-one": "^4.0.2",
    "showdown": "^1.8.6",
    "showdown-highlight": "^2.1.3"
  },
  "devDependencies": {
    "@stencil/core": "~0.13.2",
    "@types/jest": "23.3.5",
    "@types/memoize-one": "^3.1.1",
    "@types/puppeteer": "1.9.0",
    "@types/showdown": "^1.7.5",
    "jest": "23.5.0",
    "jest-environment-node": "23.4.0",
    "jsdoc-to-markdown": "^2.0.1",
    "pixelmatch": "4.0.2",
    "puppeteer": "1.7.0"
  },
  "optionalDependencies": {},
  "engines": {
    "node": "*"
  }
}
